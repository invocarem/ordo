{
  "name": "Swift Development",
  "image": "swift:6.0.3-jammy",
  "workspaceFolder": "/app",
  "remoteUser": "root",
  // ADD these 3 lines to match your docker run command:
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached"
  ],
  "runArgs": [
    "--workdir=/app"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "sswg.swift-lang",
        "vknabel.vscode-swiftformat"
      ],
      // ADD these settings for better Swift experience:
      "settings": {
        "[swift]": {
          "editor.defaultFormatter": "vknabel.vscode-swiftformat",
          "editor.formatOnSave": true,
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        }
      }
    }
  }
}